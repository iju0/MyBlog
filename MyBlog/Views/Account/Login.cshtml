
<h1>로그인</h1>


@{
    
}


<div class="row text-center">
    @using(Html.BeginForm("Login", "Account", FormMethod.Post)) {
        <div class="col-12 text-center">
        <div class="row text-center mb-2">
            <div class="col-md-5">
                <input type="text" name="name" class="form-control" placeholder="이메일"/>
            </div>
        </div>

        <div class="row text-center mb-3">
            <div class="col-md-5">
                <input type="text" name="password" class="form-control" placeholder="비밀번호"/>
            </div>
        </div>

        <div class="row text-center">
            <div class="col-md-5">
                <input type="hidden" name="returnUrl" readonly="readonly" value="@Context.Request.Query["returnUrl"]"/>
                <button class="form-control btn-danger">로그인</button>
            </div>
        </div>
    </div>
    }
</div>

